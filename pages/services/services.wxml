<!--pages/services/services.wxml-->
<form bindsubmit="formSubmit">
  <view>
    <input type="text" name="xm" placeholder="用户名" />
    <input type="number" name="dh" placeholder="电话号码" />
    <input type="password" name="mm" placeholder="密码" />
  </view>
  <view>
    <button form-type="submit">登陆</button>
  </view>
</form>
<block wx:if="{{logged}}">
  <template name="loggedInPage">
    <view>
      <text>用户名：{{name}}</text>
      <text>号码：{{phone}}</text>
      <text>日期：{{date}}</text>
    </view>
  </template>
  <template is="loggedInPage" data="{{...user}}" />
</block>